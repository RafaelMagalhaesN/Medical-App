<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="crossover.com.medicalschedule">
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ConferenceActivity"
            android:label="@string/medical_conference"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateNewConferenceActivity"
            android:label="@string/medical_conference"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewConferenceActivity"
            android:label="@string/medical_conference"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditConferenceActivity"
            android:label="@string/medical_conference"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MyInvitesActivity"
            android:label="@string/medical_conference"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>